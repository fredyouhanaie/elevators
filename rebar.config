{erl_opts, [debug_info,
            {d, {'GS_MOCK', gs}}
           ]}.
{deps, []}.

{pre_hooks, [{"linux", compile, "make -C apps/gs/src gs"},
             {"linux", clean, "make -C apps/gs/src clean"}
            ]}.

{relx, [{release, {elevators, "1.0"},
         [{elevators, "1.0"},
          gs,
          sasl]},

        {release, {elevators, "2.0"},
         [{elevators, "1.1"},
          gs,
          sasl]},

        {extended_start_script, true},
        {generate_start_script, true},

        {overlay, [
                   {mkdir, "log/sasl"}
                  ]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"}

]}.
